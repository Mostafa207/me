<Page x:Class="me.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:me"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="152*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="114*"/>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <Button Content="delete" HorizontalAlignment="Left" Margin="43,63,0,0" VerticalAlignment="Top" Style="{StaticResource button}" Click="Button_Click" Grid.Column="2"/>
        <TextBox x:Name="___txtphone" HorizontalAlignment="Left" Margin="57,63,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Style="{StaticResource txtbox}" Grid.Column="1"/>
        <Label Content="phone" HorizontalAlignment="Left" Margin="97,63,0,0" VerticalAlignment="Top" Style="{StaticResource lable}"/>
        <DataGrid x:Name="grad" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,59,0,0" Grid.ColumnSpan="3" Grid.Row="1"/>

    </Grid>
</Page>
